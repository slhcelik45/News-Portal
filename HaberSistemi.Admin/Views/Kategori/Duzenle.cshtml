@model HaberSistemi.Data.Model.Kategori
@{
    ViewBag.Title = "Kategori Duzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <form role="form">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Kategori Düzenle
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="@Url.Action("Index","Kategori")">Kategori</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-edit"></i> Kategori Düzenle
                            </li>
                        </ol>
                    </div>
                    @Html.HiddenFor(x => x.ID)
                    <div class="form-group">
                        <label for="inputSuccess">Üst Kategori </label>
                        @Html.DropDownListFor(model => model.ParentID,
                          new SelectList(ViewBag.Kategori, "ID", "KategoriAdi"),
                         ("Seçiniz"), new { @class = "form-control", id = "ParentID" })
                    </div>
                    <div class="form-group">
                        <label for="inputSuccess">Kategori Adı</label>
                        <input type="text" id="kategoriAdi" placeholder="Kategori Adı" required class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="inputSuccess">Kategori Url</label>
                        <input type="text" id="kategoriUrl" placeholder="Kategori URL" class="form-control">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="kategoriAktif" checked>Aktif Mi ?
                        </label>
                    </div>
                    <a href="#" class="btn btn-success bt-md" onclick="KategoriDuzenle();">
                        <span class="fa fa-edit"></span> Düzenle
                    </a>
                </form>
            </div>

        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
